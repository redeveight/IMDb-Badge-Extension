{
    "name": "IMDb",
    "version": "0.2",
    "description": "IMDB Badge Helper",
    "permissions": ["activeTab", "declarativeContent", "storage", "tabs"],
    "options_page": "options.html",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
      "default_title": "IMDB Badge Helper",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "files/images/imdb16.png",
        "32": "files/images/imdb32.png",
        "64": "files/images/imdb64.png",
        "128": "files/images/imdb128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://*.imdb.com/*"],
        "js": ["papaparse.js"]
      }
    ],
    "icons": {
      "16": "files/images/imdb16.png",
      "32": "files/images/imdb32.png",
      "64": "files/images/imdb64.png",
      "128": "files/images/imdb128.png"
    },
    "manifest_version": 2
}